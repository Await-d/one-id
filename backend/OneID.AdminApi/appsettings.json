{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=oneid;Username=postgres;Password=postgres"
  },
  "Persistence": {
    "Provider": "Postgres",
    "ConnectionName": "Default",
    "EnableSensitiveLogging": false
  },
  "Identity": {
    "Authority": "http://localhost:5001",
    "Audience": "oneid-adminapi"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "HotReload": {
    "PollingEnabled": true,
    "PollingIntervalSeconds": 30,
    "AutoApplyChanges": true
  }
}
