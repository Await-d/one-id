#######################################################
# OneID Admin Portal - 环境配置示例
#######################################################
# 使用说明：
# 1. 复制此文件为 .env
# 2. 根据实际环境修改配置值
# 3. 重启开发服务器使配置生效
#######################################################

# ============================================================
# API 配置
# ============================================================

# Admin API 基础 URL
# 开发环境: http://localhost:5003
# 生产环境: https://your-domain.com
VITE_API_BASE_URL=http://localhost:5003

# Identity Server URL (OIDC Provider)
# 开发环境: http://localhost:5001
# 生产环境: https://your-identity-domain.com
VITE_IDENTITY_URL=http://localhost:5001

# ============================================================
# OIDC 客户端配置
# ============================================================

# OIDC 客户端 ID
VITE_OIDC_CLIENT_ID=admin.portal

# OIDC 作用域 (空格分隔)
VITE_OIDC_SCOPES=openid profile email offline_access

# OIDC 回调 URI
# 必须与 Identity Server 中注册的 Redirect URI 一致
VITE_OIDC_REDIRECT_URI=http://localhost:5174/callback

# OIDC 登出回调 URI
VITE_OIDC_POST_LOGOUT_REDIRECT_URI=http://localhost:5174

# ============================================================
# 应用配置
# ============================================================

# 应用标题
VITE_APP_TITLE=OneID Admin Portal

# 应用版本
VITE_APP_VERSION=1.2.0

# 默认语言 (en | zh)
VITE_DEFAULT_LANGUAGE=zh

# ============================================================
# 功能开关
# ============================================================

# 启用调试模式
VITE_DEBUG=false

# 启用 API 日志
VITE_ENABLE_API_LOGGING=false

# 启用性能监控
VITE_ENABLE_PERFORMANCE_MONITORING=false

# ============================================================
# 高级配置
# ============================================================

# API 请求超时 (毫秒)
VITE_API_TIMEOUT=30000

# 自动刷新间隔 (毫秒，0 表示禁用)
VITE_AUTO_REFRESH_INTERVAL=60000

# 分页默认大小
VITE_DEFAULT_PAGE_SIZE=10

# ============================================================
# 生产环境优化
# ============================================================

# 启用 Service Worker (PWA)
VITE_ENABLE_SERVICE_WORKER=false

# 启用代码分割
VITE_ENABLE_CODE_SPLITTING=true

# 启用 Gzip 压缩
VITE_ENABLE_GZIP=true

